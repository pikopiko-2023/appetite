<div class="restaurant">
  <img class="logo" src="{{img}}" alt="{{name}}">
  <h2>{{name}}</h2>
  <div>Name: {{name}}</div>
  <div>Location: {{location}}</div>
  <div>Description: {{description}}</div>
  <div>Rating: {{rating}}</div>
  <div>Food Grade: {{food_grade}}</div>
  <h3><a href="{{id}}/reviews">View all reviews</a></h3>
</div>
