  {{>header}}
  {{>navigation}}
  <div>
      <img class="logo" src="{{viewReviews.restaurant.img}}" alt="{{viewReviews.restaurant.name}} image">
      <div class="reviews">
        <h2>{{viewReviews.restaurant.name}}'s reviews</h2>
        <p>Total Rating : {{viewReviews.restaurant.rating}}<p>
        <a class="" href="/restaurants/{{viewReviews.restaurant.id}}/addReview">add review</a>
      </div>
    </div>
  {{#each viewReviews.reviews}}
    <div>
      <div class="reviews">
        <img class="logo" src="{{userImage}}" alt="{{userName}}">
        <h3>{{userName}}  <a href="/users/{{userId}}">View Profile</a></h3>
        <p>Rating: {{rating}}</p>
        <p>{{review}}</p>
      <div>
    </div>
  {{/each}}
  </div>
{{>footer}}
