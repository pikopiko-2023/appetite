{{>header}}
{{>navigation}}
<div class = "addReview">
  <h2>{{restaurant.name}}</h2>
  <img class="logo" src="{{restaurant.img}}" alt="{{restaurant.name}}">


<form method="POST" action="{{name}}" class="form">
  <div>
    <label for="name">Name</label>
    <input type="text" id="name" name="name" placeholder="User name">
  </div>

  <div>
    <label for="email">email</label>
    <input type="text" id="email" name="email" placeholder="email@email.com">
  </div>

  <div>
    <label for="rating">Rating</label>
    <input type="integer" id="rating" name="rating" placeholder="0 ~ 5">
  </div>

  <div>
    <label for="review">Review</label>
    <textarea rows="5" id="review" name="review" placeholder="Put your review"></textarea>
  </div>

  <div></div>
  <button>Add Review</button>
</form>

</div>
{{>footer}}